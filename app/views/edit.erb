<h1>Edit Post</h1>

   <form action="/posts/<%= params[:id] %>" method="post">
     <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: <input type="text" name="name" value= "<%= @post.name %>" ></label><br>
     <label>Content: <input type="text" name="content" value= "<%= @post.content %>" ></label><br>
     <input id="submit" type="submit">
   </form>
